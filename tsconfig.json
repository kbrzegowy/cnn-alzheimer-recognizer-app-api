{
    "compilerOptions": {
      "target": "ES2021",                          
      "module": "commonjs",                    
      "lib": ["es6"],                     
      "allowJs": true,
      "outDir": "./build",                          
      "rootDir": ".",
      "strict": true,         
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true, 
      "strictPropertyInitialization": false,
    }
}